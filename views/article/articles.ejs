<%- include ("../partials/head") %>
<%- include ("../partials/navbar") %>
   <main>           
        <button><a href="/articles/new" style="color:white;"> Criar artigo</a></button><br>    
       <table>
           <thead class="table-head">
               <tr>
                   <th>id</th>               
                   <th>título</th>               
                   <th>slug</th>   
                   <th>categoria</th>            
                   <th>ações</th>
               </tr>
           </thead>
           <tbody  class="table-body">
                <% articles.forEach(article=>{ %>
                    <% if(article.id % 2 == 0){%>
                        <tr class="tr-dark">
                            <td><%= article.id %></td>                
                            <td><%= article.title %></td>               
                            <td><%= article.slug %></td> 
                            <td><%= article.category.title %></td>                              
                            <td>
                                <form action="/articles/edit/<%= article.id %>" method="GET" style="display:inline;">
                                    <button class="action edit" style="display:inline;">Editar</button>                                
                                </form>
                                <form action="/articles/delete" method="POST"  style="display:inline;">
                                    <input type="hidden" name="id" value="<%= article.id %>">
                                    <button  class="action delete"  style="display:inline;" >Deletar</button>
                                </form>                            
                            </td>
                        </tr>   
                    <%} else{ %> 
                        <tr class="tr-light">
                            <td><%= article.id %></td>                
                            <td><%= article.title %></td>                
                            <td><%= article.slug %></td>   
                            <td><%= article.category.title %></td>               
                            <td>
                                <form action="/articles/edit/<%= article.id %>" method="GET" style="display:inline;">
                                    <button class="action edit" style="display:inline;">Editar</button>                                
                                </form>
                                <form action="/articles/delete" method="POST"  style="display:inline;">
                                    <input type="hidden" name="id" value="<%= article.id %>">
                                    <button  class="action delete"  style="display:inline;" >Deletar</button>
                                </form>   
                            </td>
                        </tr> 
                    <% } %>
                <% }) %>
        </tbody>         
       </table>
   </main>
   <script> 
        let btnDelete = document.querySelectorAll(".delete")   
            btnDelete.forEach(el=>{
            el.addEventListener("click", function(e){
                
                    const decision = confirm("Deseja realmente deletar esta categoria?")                         
                    if(decision){               
                    }else{
                        e.preventDefault()
                    }
                })
            }
        )        
   </script>
